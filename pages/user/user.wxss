.header{
  padding: 20px;
  overflow: hidden;
  clear: both;
  background-color: #fff;
}

.header image{
  width: 70px;
  border-radius: 50%;
  float: left;
}

.header text{
  float: left;
  font-size: 15px;
  color: #333;
  margin-top: 25px;
  margin-left: 10px;
}

.service{
  margin-top: 10px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}
